---
import Layout from "../layouts/Layout.astro";
import LoginForm from './login.tsx';

interface LoginInterface {
    user: string;
    password: string;
    setUser: (user: string) => void;
    setPassword: (password: string) => void;
}

---
<Layout title="Login">
    <LoginForm></LoginForm>    
</Layout>

<style>
    .modal {
        display: flex;
        height: 80%;
        width: 90%;
        position: relative;
        justify-content: center;
        align-items: center;
    }

    .form {
        display: flex;
        height: 40%;
        width: 30%;
        border-radius: 1rem;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        background-color: rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(3px);
        box-shadow: 0px 1px 19px 5px rgba(0,0,0,0.21);
        -webkit-box-shadow: 0px 1px 19px 5px rgba(0,0,0,0.31);
        -moz-box-shadow: 0px 1px 19px 5px rgba(0,0,0,0.11);
    }

    .form h2 {
        font-family: sans-serif;
        color: #fff;
    }
    .form label {
        font-family: sans-serif;
        color: #fff;
    }

    .form input {
        height: 30px;
        width: 250px;
        margin: 0;
        border: none;
        background: none;
        font-size: inherit;
        color: #fff;
        background-color: rgb(57, 57, 80);
        padding: 5px 15px;
        border-radius: .5rem;
    }

    .form input::placeholder {
        font-size: 14px;
    }

    .form input:focus {
        outline: none;
    }

    .form button {
        background-color: #fff;
        border-radius: 2rem;
        height: 40px;
        width: 150px;
        color: #000;
        font-weight: bolder;
    }
    
</style>
